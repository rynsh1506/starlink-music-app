<!-- views/index.handlebars -->

<div class='d-flex justify-content-between align-items-center mb-2'>
<h2>Artists List</h2>
<button type="button" class="btn btn-success" data-toggle="modal" data-target="#addUpdateModal" onclick="openAddModal()">Add</button>
</div>
<table class="table" id="artistsTable">
  <thead>
    <tr>
      <th>No</th>
      <th>Package Name</th>
      <th>Artist Name</th>
      <th>Release Date</th>
      <th>Audio</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each data}}
    <tr id="row_{{ id }}">
      <td>{{inc @index}}</td>
      <td>
        <img src="http://localhost:3035/images/{{ ImageURL }}" alt="" width='50' , height='50'>
        {{PackageName}}
      </td>
      <td>{{ArtistName}}</td>
      <td>{{tts ReleaseDate}}</td>
      <td>
        <button class="audio-control" data-audio="{{ SampleURL }}">
          <i class="play-icon" style="font-style: normal;">▶️</i><i class="pause-icon"
            style="display:none; font-style: normal;">⏹️</i>
        </button>
      </td>
      <td>
        <button type="button" class="btn btn-primary btn-update" data-toggle="modal" data-target="#addUpdateModal"
          data-id="{{ id }}" onclick="openUpdateModal(this)">Update</button>
        <button type="button" class="btn btn-danger" data-id="{{ id }}">Delete</button>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="addUpdateModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalTitle">Add Data</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="PackageName">Package Name</label>
            <input type="text" class="form-control" id="PackageName" required>

            <label for="ArtistName">Artist Name</label>
            <input type="text" class="form-control" id="ArtistName" name="ArtistName" required>

            <label for="ReleaseDate">Release Date</label>
            <input type="date" class="form-control" id="ReleaseDate" name="ReleaseDate" required>

            <label for="MusicLink">Music Link</label>
            <input type="text" class="form-control" id="MusicLink" name="MusicLink" required>

            <label for="ImageFile">Image File</label>
            <input type="file" class="form-control" id="ImageFile" name="ImageFile" required>

            <input type="text" class="d-none" id="Image" name="Image">
            <input type="text" class="d-none" id="Id" name="Id">
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" onclick="submitForm()" data-dismiss="modal">Save changes</button>
      </div>
    </div>
  </div>
</div>
